<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ir.alirezaiyan.arzte.ui_primary_doctor_list.PrimaryListViewModel" />

        <variable
            name="state"
            type="ir.alirezaiyan.arzte.ui_primary_doctor_list.PrimaryListState" />
    </data>

    <ir.alirezaiyan.arzte.ui_sdk.utils.LceContainer
        android:id="@+id/lce"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lce="@{state.state}"
        app:retryAction="@{() -> viewModel.refresh()}">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/load_more_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:visibleOrGone="@{!state.doctorsState.loading}"
                android:indeterminate="true" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/primary_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/support_simple_spinner_dropdown_item" />
        </RelativeLayout>
    </ir.alirezaiyan.arzte.ui_sdk.utils.LceContainer>
</layout>

