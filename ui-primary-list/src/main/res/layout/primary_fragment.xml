<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="ir.alirezaiyan.arzte.ui_primary_doctor_list.PrimaryListViewModel" />

        <variable
            name="response"
            type="ir.alirezaiyan.arzte.ui_primary_doctor_list.PrimaryListResponse" />
    </data>

    <ir.alirezaiyan.arzte.ui_sdk.utils.StateLayout
        android:id="@+id/stateLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:state="@{response.state}"
        app:retryAction="@{() -> viewModel.refresh()}">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/load_more_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:visibleOrGone="@{response.doctorsState.loading}"
                android:indeterminate="true" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/primaryContainer"/>

        </RelativeLayout>
        </ir.alirezaiyan.arzte.ui_sdk.utils.StateLayout>
</layout>

